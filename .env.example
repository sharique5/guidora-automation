# Guidora Automation Environment Variables
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# LLM Providers (for Story Generation)
# =============================================================================
# Get OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Alternative: Get Anthropic Claude API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# Text-to-Speech Services (for Week 3)
# =============================================================================
# Get ElevenLabs API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Alternative: Azure Cognitive Services (Text-to-Speech)
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=your-region-here

# =============================================================================
# YouTube API (for Week 5)
# =============================================================================
# Get YouTube Data API v3 credentials from: https://console.cloud.google.com/
YOUTUBE_API_KEY=your-youtube-api-key-here
YOUTUBE_CLIENT_ID=your-client-id-here
YOUTUBE_CLIENT_SECRET=your-client-secret-here

# =============================================================================
# Optional: Storage and CDN
# =============================================================================
# For storing generated videos and assets
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# Application Settings
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Cost limits (USD)
DAILY_COST_LIMIT=5.00
MONTHLY_COST_LIMIT=50.00

# Video generation settings
DEFAULT_VIDEO_RESOLUTION=1080p
DEFAULT_AUDIO_QUALITY=high

# =============================================================================
# Webhook URLs (for notifications)
# =============================================================================
DISCORD_WEBHOOK_URL=your-discord-webhook-url
SLACK_WEBHOOK_URL=your-slack-webhook-url